{
  "name": "jam-pack-nodegui",
  "version": "0.1.0",
  "description": "Tool to package NodeGui applications",
  "main": "dist/main.js",
  "author": "Simon Edwards <simon@simonzone.com>",
  "license": "MIT",
  "exports": "./dist/main.js",
  "type": "module",
  "scripts": {
    "build": "yarn run build:code && yarn run build:bundle",
    "build:code": "tsc",
    "build:bundle": "esbuild build/main.js --bundle --outfile=dist/main.js --platform=node --format=esm '--external:./node_modules/*'",
    "clean": "shx rm -rf build dist",
    "run": "node dist/main.js",
    "test": "yarn run build && yarn node --experimental-vm-modules $(yarn bin jest)"
  },
  "bin": "./dist/main.js",
  "files": [
    "dist/main.js",
    "README.md",
    "LICENSE.txt"
  ],
  "dependencies": {
    "@yarnpkg/shell": "^3.2.4",
    "commander": "^9.4.0",
    "minimatch": "^5.1.0",
    "rcedit": "^3.0.1",
    "readdirp": "^3.6.0",
    "recursive-copy": "^2.0.14",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/minimatch": "^5.1.0",
    "@types/node": "^18.7.13",
    "@types/shelljs": "^0.8.11",
    "esbuild": "^0.15.7",
    "jest": "27.5.1",
    "shx": "^0.3.4",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.3",
  "targets": {
    "jam-pack-nodegui": {
      "context": "node"
    }
  }
}
